<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.muaaz.kitchen">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="merge">
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up"
            android:noHistory="true"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".HomeActivity"
            android:noHistory="true" />
        <activity
            android:name=".StarterActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:noHistory="true" />
        <activity android:name=".SweetActivity" />
        <activity
            android:name=".PlaceOrderActivity"
            android:noHistory="true" />
        <activity
            android:name=".ConfirmOrderActivity"
            android:noHistory="true"
            android:parentActivityName=".PlaceOrderActivity" />
        <activity android:name=".ViewOrdersActivity" />
        <activity android:name=".ViewIndivOrderActivity" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>